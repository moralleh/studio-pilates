<!DOCTYPE html>
<html lang="pt-BR">
<%- include('partials/head.ejs') %>
<head>
    <link rel="stylesheet" href="/css/usuario.css">
</head>

<body>
  <a href="/agendarAula" class="btn btn-secondary position-fixed top-0 start-0 m-3">Voltar</a>
  <main>
    <div class="container">
      <div class="my-4 p-4 border rounded bg-white">
        <form action="/cadastro" method="POST" onsubmit="return validarFormularioCompleto()" id="formCadastro">
          <h4 class="mb-4">Cadastro</h4>
        
          <!-- Nome -->
          <div class="form-group mb-3">
            <label for="nome">Nome completo</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
          </div>
        
          <!-- Sexo -->
          <div class="form-group mb-3">
            <label>Sexo</label><br>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sexo" id="masculino" value="M" required>
              <label class="form-check-label" for="masculino">Masculino</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="sexo" id="feminino" value="F">
              <label class="form-check-label" for="feminino">Feminino</label>
            </div>
          </div>

          <!-- CPF -->
          <div class="form-group mb-3">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" id="cpf" name="cpf" placeholder="000.000.000-00" required>
            <small id="cpfError" class="form-text text-danger">CPF inválido. Por favor, insira um CPF válido.</small>
          </div>
        
          <!-- Celular -->
          <div class="form-group mb-3">
            <label for="celular">Celular</label>
            <input type="tel" class="form-control" id="celular" name="celular" placeholder="(XX) XXXXX-XXXX" required>
          </div>
        
          <!-- E-mail -->
          <div class="form-group mb-3">
            <label for="email">E-mail</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="email@exemplo.com" required>
          </div>

          <!-- Senha -->
          <div class="form-group">
            <label for="exampleInputPassword1">Senha</label>
            <input type="password" name="senha" class="form-control" id="exampleInputPassword1" placeholder="****" required>
          </div>
          <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" onclick="mostrarSenha()">
            <label class="form-check-label" for="exampleCheck1">Visualizar senha</label>
          </div>

          <!-- Botão -->
          <button type="submit" class="btn btn-primary w-100">Enviar</button>
        </form>
      </div>
    </div>
      
  </main>

  <script src="/js/login.js"></script>
  <script src="/js/cadastro.js"></script>
</body>
</html>